{
  "manifest_version": 3,
  "name": "Shopee Auditor AI - by Mateus",
  "version": "1.0",
  "description": "Auditoria estatística e extração de reviews para IA.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": ["*://*.shopee.com.br/*"],
  "content_scripts": [
    {
      "matches": ["*://*.shopee.com.br/*"],
      "js": ["auditor.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
